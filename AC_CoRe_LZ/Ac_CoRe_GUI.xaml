        </TabControl>
        <Button x:Name="save_settings_btn" Content="save" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="76" Click="save_settings_btn_Click" Margin="118,0,118,10" Background="#FF1A1A1A"/>


