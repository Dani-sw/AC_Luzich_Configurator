                            <Rectangle x:Name="bbox_Std_12_rect" RadiusX="50" RadiusY="50" ToolTip="click to select" StrokeThickness="5" HorizontalAlignment="Left" Height="30" Margin="93,148,0,0" Stroke="#FF000CFF" VerticalAlignment="Top" Width="30" Cursor="Hand" Fill="#00000000" />
