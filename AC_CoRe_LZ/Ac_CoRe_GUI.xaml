                </Grid>
            </TabItem>
            <TabItem Header="Arduino"  Controls:HeaderedControlHelper.HeaderFontSize="20"  Visibility="Collapsed">
                <Grid x:Name="Arduino_grid" Background="#FF1A1A1A" Visibility="Collapsed"  >
                    <Controls:ToggleSwitch x:Name="Arduino_Enable_sw" IsOn="true" OffContent="Arduino Disable" OnContent="Arduino Enable" Width="178"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,29,0,0"  />
                    <Grid x:Name="Arduino_Debug_Grid" Margin="0,86,0.4,0" Background="#FF151515" Height="87" VerticalAlignment="Top">
