                    <StackPanel Margin="0,231,0,144" Orientation="Horizontal" Background="#FF151515" >
                        <Label x:Name="NI_Port_lbl" Content="NI Device Port:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,20,0" FontSize="18"/>
                        <TextBox x:Name="NI_Port_txtb" HorizontalAlignment="Right" Height="34" TextWrapping="Wrap" Text="port1" VerticalAlignment="Top" Width="72" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="/AC_CoRe;component/fonts/#3ds Light" FontSize="18"/>
