                    <Controls:ToggleSwitch x:Name="NI_Enable_sw" IsOn="true" OffContent="NI Disable" OnContent="NI Enable" Width="178"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,29,0,0" FontFamily="/AC_CoRe;component/fonts/#3ds Light" FontSize="18"  />
                    <Grid x:Name="NI_Debug_Grid" Margin="0,86,0.4,0" Background="#FF151515" Height="74" VerticalAlignment="Top">
                        <Controls:ToggleSwitch x:Name="NI_Debug_sw" IsOn="false" OffContent="NI Debug OFF" OnContent="NI Debug ON" Width="178"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,6,0,0" FontFamily="/AC_CoRe;component/fonts/#3ds Light" FontSize="18"  />
