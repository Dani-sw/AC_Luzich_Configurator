                        <TextBox x:Name="NI_Name_txtb" HorizontalAlignment="Right" Height="27" TextWrapping="Wrap" Text="Dev1" VerticalAlignment="Top" Width="72" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="/AC_CoRe;component/fonts/#3ds Light" FontSize="18" />
