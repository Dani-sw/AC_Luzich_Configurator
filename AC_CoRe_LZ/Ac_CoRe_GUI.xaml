                        <Rectangle x:Name="Arduino_test_OFF" Fill="#19FF0000" HorizontalAlignment="Left" Height="22" Margin="225,55,0,0" RadiusY="17.9"  Stroke="#FF333337" VerticalAlignment="Top" Width="67"/>
                        <Label x:Name="Arduino_debug_lbl" Content="Push Start/Stop switch" HorizontalAlignment="Left" Margin="13,51,0,0" VerticalAlignment="Top"/>
