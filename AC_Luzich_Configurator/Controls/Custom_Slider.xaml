<UserControl x:Class="AC_Configurator_STDL.Controls.Custom_Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="40">
    
    <Canvas x:Name="SliderCanvas" Width="300" Height="40">
        <!-- Track (sfondo) -->
        <Rectangle x:Name="Track" 
                   Width="280" Height="8" 
                   Fill="#E0E0E0"
                   Stroke="#CCCCCC"
                   StrokeThickness="1"              
                   Canvas.Left="10" Canvas.Top="16"
                   MouseDown="Track_MouseDown"/>

        <!-- Fill (parte riempita) -->
        <Rectangle x:Name="Fill"
                   Width="0" Height="8"
                   Fill="#FF1E90F5"
                   Canvas.Left="10" Canvas.Top="16"
                   IsHitTestVisible="False"/>

        <!-- Thumb (maniglia) -->
        <Ellipse x:Name="Thumb"
                 Width="20" Height="20"
                 Fill="#FFA72A22"
                 Stroke="White"
                 StrokeThickness="2"
                 Canvas.Left="10" Canvas.Top="10"
                 MouseDown="Thumb_MouseDown"
                 MouseMove="Thumb_MouseMove"
                 MouseUp="Thumb_MouseUp"
                 Cursor="Hand"/>
    </Canvas>
</UserControl>
